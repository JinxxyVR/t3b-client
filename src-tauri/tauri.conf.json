{
    "build": {
        "beforeDevCommand": "bun run dev",
        "beforeBuildCommand": "bun run build",
        "frontendDist": "../dist",
        "devUrl": "http://localhost:1420"
    },
    "bundle": {
        "active": true,
        "targets": [
            "msi"
        ],
        "windows": {
            "certificateThumbprint": "dfaf8f052938b74873a6f6015c8a43139e988a32",
            "digestAlgorithm": "sha256",
            "timestampUrl": "http://timestamp.comodoca.com",
            "wix": {
                "bannerPath": "wix/banner.bmp",
                "dialogImagePath": "wix/dialog.bmp"
            }
        },
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "createUpdaterArtifacts": "v1Compatible",
        "fileAssociations": [{
            "description": "Third Avatar Bundle",
            "ext": ["3b"]
        }]
    },
    "productName": "Jinxxy Direct Client",
    "mainBinaryName": "Jinxxy Direct Client",
    "identifier": "com.jinxxy.t3b-client",
    "plugins": {
        "updater": {
            "windows": {
                "installMode": "passive"
            },
            "endpoints": [
                "https://github.com/JinxxyVR/t3b-client/releases/latest/download/latest.json"
            ],
            "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU0OEFCMTI5Nzk3NTNGMzkKUldRNVAzVjVLYkdLVkRNUWJrZ1d1MGJ5Rnh1ZnYyQzlIZ2pCVkd4L3REdU1jNTlJRDlxZnpIZEQK"
        }
    },
    "app": {
        "security": {
            "assetProtocol": {
                "scope": [
                    "$APPDATA/bundles/**"
                ],
                "enable": true
            },
            "csp": "default-src 'self'; img-src 'self' *.vrchat.cloud asset: https://asset.localhost; style-src 'self' 'unsafe-inline'; connect-src ipc: http://ipc.localhost"
        },
        "windows": [
            {
                "title": "Jinxxy Direct Client",
                "width": 800,
                "height": 600,
                "minWidth": 800,
                "minHeight": 600,
                "center": true,
                "decorations": false,
                "dragDropEnabled": true,
                "visible": true,
                "useHttpsScheme": true,
                "userAgent": "Jinxxy Direct Client/1.0.0 hello@jinxxy.com",
                "backgroundColor": "#101011",
                "theme": "Dark"
            }
        ]
    }
}